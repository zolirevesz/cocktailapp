<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.hnpper.cocktailapp.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_detailFragment"
            app:destination="@id/detailFragment">
            <argument
                android:name="cocktailId"
                app:argType="Int" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/nav_search"
        android:name="com.hnpper.cocktailapp.ui.search.SearchFragment"
        android:label="@string/menu_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_nav_search_to_detailFragment"
            app:destination="@id/detailFragment" >
            <argument
                android:name="cocktailId"
                app:argType="Int" />
        </action>

    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.hnpper.cocktailapp.ui.detail.DetailFragment"
        android:label="DetailFragment"
        tools:layout="@layout/fragment_detail" >
        <argument
            android:name="cocktailId"
            app:argType="Int" />
    </fragment>

    <fragment
        android:id="@+id/nav_login"
        android:name="com.hnpper.cocktailapp.ui.login.LoginFragment"
        android:label="@string/menu_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_nav_login_to_nav_registration"
            app:destination="@id/nav_registration" />
    </fragment>

    <fragment
        android:id="@+id/nav_registration"
        android:name="com.hnpper.cocktailapp.ui.registration.RegistrationFragment"
        android:label="@string/menu_registration"
        tools:layout="@layout/fragment_registration" >
    </fragment>


</navigation>